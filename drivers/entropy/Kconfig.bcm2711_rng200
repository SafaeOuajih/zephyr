config ENTROPY_BMC2711_RNG200
	bool "Broadcom bcm2711 rng200 Entropy driver"
	default y
	depends on DT_HAS_BRCM_BCM2711_RNG200_ENABLED
	select ENTROPY_HAS_DRIVER
	help
	  Enable the bcm2711 rng200 entropy driver.
